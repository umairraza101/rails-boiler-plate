.events_div
  - @events.each do |event|
    .card.mb-12.mt-4{:style => "max-width: 540px;"}
      .row.no-gutters
        .col-md-5.col-12
          =image_tag(event.photo_url,class: "event-card-image")
        .col-md-7.col-12
          .card-body
            %h5.card-title= link_to event.title.capitalize, public_event_path(event)
            %p.card-text.text-truncate= sanitize event.description.html_safe.first(100)
            %p.card-text.mb-0
              %small.text-muted
                From:  #{"#{event.start_date.strftime('%m/%d/%Y')} #{event.start_date.strftime('at %I:%M%p')}"}
            %p.card-text
              %small.text-muted
                To:  #{"#{event.end_date.strftime('%m/%d/%Y')} #{event.end_date.strftime('at %I:%M%p')}"}
            %p.card-text
              %small.text-muted
                Status:  #{event.status.capitalize}
